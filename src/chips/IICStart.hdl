CHIP IICStart {
  IN clock0, reset, enable;
  OUT sda, scl, done;

  PARTS:
  HalfClock(
    clockIn=clock0,
    reset=reset,
    clockOut=clock1
  );
  // |        | clock0 | clock1 | scl | sda |
  // | en=0   |    X   |    X   |  0  |  0  |
  // | phase0 |    0   |    0   |  1  |  0  |
  // | phase1 |    1   |    0   |  1  |  0  |
  // | phase2 |    0   |    1   |  0  |  0  |
  // | phase3 |    1   |    1   |  0  |  0  |

  // Generate the IIC "start" condition
  Copy(in=false, out=sda);
  Nor(a=clock1, b=fin, out=scl);

  // Done-ness logic
  Nor(a=clock0, b=clock1, out=clock01);
  Not(in=reset, out=nreset);
  Or(a=reset, b=clock01, out=setDone);
  Bit(in=nreset, load=setDone, out=fin);
  And(a=fin, b=nreset, out=done0);
  And(a=done0, b=enable, out=done);
}
